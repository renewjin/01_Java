package ncs.test6;

import java.util.Scanner;

public class Calculator {
	
	// 기본생성자
	public Calculator() {
	}

	
	public double getSum() throws InvalidException {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("5이하 정수를 입력해 주세요");
		int num = sc.nextInt();
		if (num<2 && num>5) {
			throw new InvalidException("입력 값에 오류가 있습니다");
		}
		
		int sum = 0;
		for (int i = 1; i<=num; i++) {
			sum += i;
		}
		
		return sum;
	}
}
